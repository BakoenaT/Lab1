.data
prompt: .asciz "enter height of Basotho hat pattern: "
newline: .asciz "\n"
star: .asciz "*"

.text
.globl main
main:
#Prompt for height
la a0, prompt
li a7, 4
ecall
#Read n
li a7, 5
ecall
mv t0, a0 # t0= n
li t1, 1 # t1 = row counter

outer_loop:
bgt t1, t0, exit # if row > n = exit
mv t2, t1 # stars to print = current row

inner_loop:
beqz t2, next_line # if no stars left, move to next line
# Print star
la a0, star
li a7, 4
ecall
addi t2, t2, -1
j inner_loop

next_line:
# Print newline
la a0, newline
li a7, 4
ecall
addi t1, t1, 1
j outer_loop

exit:
li a7, 10
ecall
